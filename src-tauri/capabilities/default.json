{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "auth"
  ],
  "permissions": [
    "core:path:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$APPCACHE/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$APPCACHE/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$APPCACHE/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$APPCACHE/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$APPCACHE/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "**"
        },
        {
          "path": "$APPCACHE/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    "http:default",
    "upload:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-select",
    "sql:allow-execute",
    "store:default",
    "core:event:allow-unlisten",
    "core:window:allow-minimize",
    "core:window:allow-start-dragging",
    "core:event:allow-listen",
    "core:window:allow-toggle-maximize",
    "core:window:allow-is-maximized",
    "core:window:allow-close",
    "core:window:allow-set-decorations",
    "core:window:allow-set-resizable",
    "core:window:allow-set-size",
    "core:window:allow-center",
    "core:window:allow-hide",
    "core:window:allow-set-always-on-top",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "core:webview:allow-create-webview-window",
    "core:window:allow-get-all-windows",
    "dialog:default",
    "opener:allow-open-path"
  ]
}