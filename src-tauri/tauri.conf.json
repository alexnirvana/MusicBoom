{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "music_boom",
  "version": "0.1.0",
  "identifier": "com.alex.music_boom",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "auth",
        "title": "登录 MusicBoom",
        "width": 460,
        "height": 640,
        "resizable": false,
        "decorations": false,
        "center": true,
        "transparent": true,
        "shadow": false,
        "url": "/#/login"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "http": {
      "scope": ["http://*/*", "https://*/*"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
